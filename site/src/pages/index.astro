---
import Layout from '~/layouts/PageLayout.astro';
import FullBleedHero from '~/components/widgets/FullBleedHero.astro';
---

<Layout>
  <style is:inline>
    /* Home-only: set background blend to match hero image edges */
    :root {
      /* Colors provided */
      --site-bg-top: #ebe0d3;
      --site-bg-bottom: #c4ac95;
    }
  </style>
  <FullBleedHero
    title="Bree Lowdermilk"
    subtitle="Playwright • Composer • Lyricist"
    actions={[
      { variant: 'primary', text: 'Listen/Watch', href: '/media' },
      { variant: 'primary', text: 'About Bree', href: '/about' },
    ]}
    imageUrl="image-set(url('/images/hero/red-guitar-desktop-final.avif') type('image/avif'), url('/images/hero/red-guitar.png') type('image/png'))"
    imageUrlMobile="/images/hero/red-guitar-mobile.png"
    position="right center"
    mobilePosition="center 15%"
    overlay={0}
    minVh={108}
    mobileMinVh={130}
    contentAlign="center"
    contentOffsetY={16}
    textAlign="center"
    mobileContentAlign="start"
    mobileContentOffsetY={0}
    mobileTextAlign="center"
  />
</Layout>
