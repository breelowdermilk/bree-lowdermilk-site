+      const redPrimary = getComputedStyle(document.documentElement).getPropertyValue('--red-primary');
+      const fontTitle = getComputedStyle(document.documentElement).getPropertyValue('--font-title');
+      const headers = document.querySelectorAll('.bree-h1, .bree-h2');
+      
+      return {
+        hasRedPrimary: redPrimary.trim() === '#dc2626',
+        hasTitleFont: fontTitle.includes('Source Serif 4'),
+        headerCount: headers.length
+      };
+    });
+    
+    console.log('üé® Theme Check:', themeCheck);
+    
+    console.log('\nüéâ Screenshots complete! Check the files:');
+    console.log('   ‚Ä¢ bree-theme-homepage.png');
+    console.log('   ‚Ä¢ bree-theme-media.png');
+    
+    console.log('\nüåê Browser left open at media page for inspection...');
+    
+  } catch (error) {
+    console.error('‚ùå Error:', error.message);
+    await browser.close();
+  }
+}
